{
  "name": "letter-writer",
  "version": "1.0.0",
  "private": true,
  "description": "Recommendation Letter Management Tool",
  "workspaces": [
    "shared",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build -w shared && npm run db:migrate:deploy && npm run db:generate -w backend && npm run build -w backend && npm run build -w frontend",
    "start": "npm run start -w backend",
    "db:migrate": "npm run db:migrate -w backend",
    "db:migrate:deploy": "npx prisma migrate deploy --schema=backend/prisma/schema.prisma",
    "db:push": "npm run db:push -w backend",
    "db:studio": "npm run db:studio -w backend",
    "db:generate": "npm run db:generate -w backend",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
