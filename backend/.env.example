# Server
PORT=3001
NODE_ENV=development  # Set to 'production' for deployment

# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/letterwriter

# JWT (IMPORTANT: Generate a secure secret for production)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-256-bit-secret-here-generate-with-openssl-rand-hex-32
JWT_EXPIRES_IN=24h

# Email (SMTP) - Configure for sending letters
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Frontend URL (for CORS in development - not needed in production)
FRONTEND_URL=http://localhost:5173

# Brevo (for transactional emails)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=your-admin-email@example.com
